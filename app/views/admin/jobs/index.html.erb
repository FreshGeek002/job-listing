<div class="col-md-12">
<div class="pull-right">
  <%= link_to("新增职缺", new_admin_job_path, :class => "btn btn-primary")%>
</div>

  <br><br>

  <table class="table table-striped">
    <thead>
    <tr>
      <td>#</td>
      <td>职位</td>
      <td>修改|删除</td>
      <td>创建时间</td>
    </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
      <tr>
        <td>#</td>
        <td>
          <%= render_job_status(job) %>

          <%= link_to(job.title, admin_job_path(job)) %>
        </td>
        <td>
          <%= link_to("Edit", edit_admin_job_path(job))%> |
          <%= link_to("Delete", admin_job_path(job), :method => :delete, :data => {:confirm => "Are you sure?"})%>

          <% if job.is_hidden %>

          <%= link_to("公开", publish_admin_job_path(job), :method => :post, :class => "btn btn-xs btn-default") %>
          <% else %>
          <%= link_to("隐藏", hide_admin_job_path(job), :method => :post, :class => "btn btn-xs btn-default") %>
          <% end %>
        </td>
        <td>
          <%= job.created_at %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
